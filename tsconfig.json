{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./packages",
    "paths": {
      "@awtrix/dev": ["dev/src"],
      "@awtrix/common": ["common/src"],
      "@awtrix/app": ["awtrix/src"]
    }
  }
}
