{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "types": [
      "node",
      "@types/node",
      "vite/client"
    ]
  },
  "exclude": [
    "vite.config.ts",
    "node_modules",
    "dist",
    "bin",
    "web",
    "web_old",
    "templates"
  ]
}
