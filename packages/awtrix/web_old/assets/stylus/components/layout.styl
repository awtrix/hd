html, body
  height 100%
  font-family 'Ubuntu', sans-serif
  overflow hidden
  checkered-pattern 25px

.nuxt-container
  position: absolute
  left: 50%
  top: 50%
  overflow: hidden
  margin-left: -(awtrix-width / 2)
  margin-top: -(awtrix-height / 2)

  width: awtrix-width
  height: awtrix-height
  background: black

.layout--development .hint
  position: absolute
  color: black
  left: 20px
  top: "calc(50% + %s + 12px)" % (awtrix-height / 2)
  font-size: 24px
  font-weight: 600

button, input, optgroup, textarea, select
  color: black
